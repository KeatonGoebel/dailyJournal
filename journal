create database journal;

create Table
    userData (
        email VARCHAR(100),
        currentDay DATE,
        mood VARCHAR(1000),
        rating INT (4),
        favorite_thing VARCHAR(1000),
        PRIMARY KEY (email, currentDay)
    );

INSERT INTO
    userData (email, currentDay, mood, rating, favorite_thing)
VALUES
    (
        'test@example.com',
        '2024-07-01',
        'Happy',
        8,
        'Reading'
    );

DELETE FROM userData
WHERE
    currentDay = '2024-07-01';

UPDATE userData
SET
    mood = 'Excited',
    rating = 9
WHERE
    currentDay = '2024-07-01';

SELECT * FROM     userData WHERE     currentDay BETWEEN DATE_SUB(NOW(), INTERVAL 7 DAY) AND NOW();

